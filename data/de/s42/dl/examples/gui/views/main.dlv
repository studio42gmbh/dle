/*
 * Test main view
 */

Button close {
	bounds : 10, 10, 100, 50;
	text : $i18n.mainCloseText;
	action : CloseAction {
		window : $window;
	};
}

Label info {
	bounds : 10, 70, 100, 20;
	text : $i18n.mainInfoText;
}

Panel panel {

	bounds : 150, 100, 300, 200;

	Label {
		bounds : 10, 10, 100, 20;
		text : $i18n.mainPanelLabelText;
	}

	Button {
		bounds : 120, 10, 100, 50;
		text : $i18n.mainDebugText;
		action : DebugAction {};
	}
}